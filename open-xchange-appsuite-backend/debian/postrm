#!/bin/bash
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_dayview_table.tmpl /opt/open-xchange/templates/cp_dayview_table_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_monthview_list.tmpl /opt/open-xchange/templates/cp_monthview_list_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_weekview_table.tmpl /opt/open-xchange/templates/cp_weekview_table_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_workweekview_table.tmpl /opt/open-xchange/templates/cp_workweekview_table_appsuite.tmpl 7.2.0 -- "$@"

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
