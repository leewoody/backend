#!/bin/bash
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /opt/open-xchange/lib/oxfunctions.sh

postFix() {
    local version=${1%-*}
    version=${version//[-.]/}

    # prevent bash from expanding, see bug 13316
    GLOBIGNORE='*'

    # SoftwareChange_Request-1287
    pfile=/opt/open-xchange/etc/manifests.properties
    if ! ox_exists_property com.openexchange.apps.path $pfile; then
        ox_set_property com.openexchange.apps.path "/opt/open-xchange/appsuite" $pfile
    fi

    # SoftwareChange_Request-2436
    if dpkg --compare-versions "7.6.2-0" gt-nl "$1"; then
        sed -i 's/2014 Open-Xchange/2015 Open-Xchange/' /opt/open-xchange/etc/as-config-defaults.yml
    fi

    # SoftwareChange_Request-2880
    ox_add_property io.ox/core//pdf/enableRangeRequests true /opt/open-xchange/etc/settings/appsuite.properties
}


case "$1" in
    configure)
        test -n "$2" && {
            # we are in update mode, run postFix to apply fixes
            postFix "$2"
        }
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_dayview_table.tmpl /opt/open-xchange/templates/cp_dayview_table_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_monthview_list.tmpl /opt/open-xchange/templates/cp_monthview_list_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_weekview_table.tmpl /opt/open-xchange/templates/cp_weekview_table_appsuite.tmpl 7.2.0 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/templates/print_workweekview_table.tmpl /opt/open-xchange/templates/cp_workweekview_table_appsuite.tmpl 7.2.0 -- "$@"

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
