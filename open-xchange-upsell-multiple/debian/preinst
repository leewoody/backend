#!/bin/bash
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

for i in upsell.properties upsell_mail_body_ox_enduser.tmpl upsell_mail_body_ox_enduser.tmpl_de_DE \
        upsell_mail_subject_ox_enduser.tmpl upsell_mail_subject_ox_enduser.tmpl_de_DE; do
        dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/$i \
          /opt/open-xchange/etc/$i 6.20.99 -- "$@"
done

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/settings/upsell-multiple-gui.properties \
  /opt/open-xchange/etc/settings/upsell-multiple-gui.properties 6.20.99 -- "$@"

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
