OXFUNCTIONS=@oxfunctions@
OXCONFIG=@oxscriptconf@

test -f $OXFUNCTIONS || {
    echo "missing common shell functions file"
    exit 1
}

. $OXFUNCTIONS

test -f $OXCONFIG && . $OXCONFIG

ox_set_JAVA_BIN

BNAME=$(basename $0)

case "$BNAME" in
    "createadmin")
    ACTION="Create"
    ;;
    "deleteadmin")
    ACTION="Delete"
    ;;
    "changeadmin")
    ACTION="Change"
    ;;
    "listadmin")
    ACTION="List"
    ;;
    "listrestrictions")
    ACTION="ListRestrictions"
    ;;
    "initrestrictions")
    ACTION="InitRestrictions"
    ;;
    "removerestrictions")
    ACTION="RemoveRestrictions"
    ;;
    "updatemoduleaccessrestrictions")
    ACTION="UpdateModuleAccessRestrictions"
    ;;
    "updaterestrictions")
    ACTION="UpdateRestrictions"
    ;;
esac

JAVAMAIN="com.openexchange.admin.reseller.console.${ACTION}"

test -z "$JAVA_OXCMD_OPTS" && JAVA_OXCMD_OPTS="-Xmx280M"

JAVA_OPTS="${JAVA_OXCMD_OPTS} \
-Djava.awt.headless=true \
-Dopenexchange.propdir=$PROPERTIESDIR"

CLASSPATH="-classpath @classpath@"

exec $JAVA_BIN $JAVA_OPTS $CLASSPATH $JAVAMAIN "$@"
