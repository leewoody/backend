#!/usr/bin/perl
#%# family=auto
#%# capabilities=autoconf

use strict;

use LWP;
use JSON;

if ( $ARGV[0] and $ARGV[0] eq "autoconf")
{
	print "yes\n";
	exit 0;
}

my $url = $ENV{oxJolokiaUrl};
my $username = $ENV{oxJolokiaUser};
my $password = $ENV{oxJolokiaPassword};

if ( $ARGV[0] and $ARGV[0] eq "config")
{
	print "graph_title Java non Heap\n";
	print "graph_args --base 1024 -l 0\n";
	print "graph_category Open Xchange\n";
	print "graph_vlabel bytes\n";
	
	my @confArray = ("label Code Cache","draw AREA");
	callUrlForConfig("a",\@confArray,"/search/java.lang:name=Code Cache,type=MemoryPool");
	
	my @confArray = ("label Perm Gen","draw STACK");
	callUrlForConfig("b",\@confArray,"/search/java.lang:*,name=*Perm Gen,type=MemoryPool");
	
	my @confArray = ("label class storage","draw AREA");
	callUrlForConfig("c",\@confArray,"/search/java.lang:name=class storage,type=MemoryPool");
	
	my @confArray = ("label JIT code cache","draw STACK");
	callUrlForConfig("d",\@confArray,"/search/java.lang:name=JIT code cache,type=MemoryPool");
	
	my @confArray = ("label JIT data cache","draw STACK");
	callUrlForConfig("e",\@confArray,"/search/java.lang:name=JIT data cache,type=MemoryPool");
	
	my @confArray = ("label miscellaneous non-heap storage","draw STACK");
	callUrlForConfig("f",\@confArray,"/search/java.lang:name=miscellaneous non-heap storage,type=MemoryPool");
	
	exit 0
}

callUrl("a","/read/java.lang:name=Code Cache,type=MemoryPool/Usage/used");
callUrlForUsageUsed("b","/read/java.lang:*,name=*Perm Gen,type=MemoryPool/Usage");
callUrl("c","/read/java.lang:name=class storage,type=MemoryPool/Usage/used");
callUrl("d","/read/java.lang:name=JIT code cache,type=MemoryPool/Usage/used");
callUrl("e","/read/java.lang:name=JIT data cache,type=MemoryPool/Usage/used");
callUrl("f","/read/java.lang:name=miscellaneous non-heap storage,type=MemoryPool/Usage/used");

sub callUrl {
	my $ua = LWP::UserAgent->new();
	my $req = HTTP::Request->new(GET => "$url$_[1]");
	$req->authorization_basic($username,$password);
	
	$req->header('Accept', => 'text/html');
	
	my $response = $ua->request($req);
	
	if ($response->is_success) {
		my $json = decode_json($response->decoded_content);
		if (defined $json->{value}){
			print "$_[0].value ";
			print $json->{value},"\n";
		}
	}
	else {
		my $status = $response->status_line;
		if ($status == 404) {
			die "Link to servlet might not be set correctly, this can be done by altering /etc/munin/plugin-conf.d/ox and setting the correct path to your jolokia servlet";
		}
		elsif ($status == 401) {
			die "Credentials to login might be not set correctly. The credentials are set inside /opt/open-xchange/etc/jolokia.properties on the OX, for munin, those need to be altered at /etc/munin/plugin-conf.d/ox";
		}
		else {
			die "Something went wrong:\n",$status;
		}
	}
}

sub callUrlForUsageUsed {
	my $ua = LWP::UserAgent->new();
	my $req = HTTP::Request->new(GET => "$url$_[1]");
	$req->authorization_basic($username,$password);
	
	$req->header('Accept', => 'text/html');
	
	my $response = $ua->request($req);
	
	if ($response->is_success) {
		my $json = decode_json($response->decoded_content);
		if (defined $json->{value}){
			my $jsonValues = $json->{value};
			foreach my $val (values %$jsonValues){
				print "$_[0].value ";
				print $val->{Usage}{used},"\n";
			}
		}
	}
	else {
		my $status = $response->status_line;
		if ($status == 404) {
			die "Link to servlet might not be set correctly, this can be done by altering /etc/munin/plugin-conf.d/ox and setting the correct path to your jolokia servlet";
		}
		elsif ($status == 401) {
			die "Credentials to login might be not set correctly. The credentials are set inside /opt/open-xchange/etc/jolokia.properties on the OX, for munin, those need to be altered at /etc/munin/plugin-conf.d/ox";
		}
		else {
			die "Something went wrong:\n",$status;
		}
	}
}

sub callUrlForConfig {
	my $ua = LWP::UserAgent->new();
	my $req = HTTP::Request->new(GET => "$url$_[2]");
	$req->authorization_basic($username,$password);
	
	$req->header('Accept', => 'text/html');
	
	my $response = $ua->request($req);
	
	if ($response->is_success) {
		my $json = decode_json($response->decoded_content);
		if (defined $json->{value}->[0]){
			foreach (@{$_[1]}){
				print "$_[0].$_\n";
			}
		}
	}
	else {
		my $status = $response->status_line;
		if ($status == 404) {
			die "Link to servlet might not be set correctly, this can be done by altering /etc/munin/plugin-conf.d/ox and setting the correct path to your jolokia servlet";
		}
		elsif ($status == 401) {
			die "Credentials to login might be not set correctly. The credentials are set inside /opt/open-xchange/etc/jolokia.properties on the OX, for munin, those need to be altered at /etc/munin/plugin-conf.d/ox";
		}
		else {
			die "Something went wrong:\n",$status;
		}
	}
}