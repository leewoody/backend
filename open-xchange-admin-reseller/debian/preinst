#!/bin/bash
# preinst script for open-xchange-admin-reseller
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/admindaemon/plugin/reseller.properties /opt/open-xchange/etc/plugin/reseller.properties 6.20.99 -- "$@"
dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/admindaemon/mysql/reseller.sql /opt/open-xchange/etc/mysql/reseller.sql 6.20.99 -- "$@"

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
