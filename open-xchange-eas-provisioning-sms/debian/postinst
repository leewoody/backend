#!/bin/bash
# postinst script for open-xchange-eas-provisioning-sms
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /opt/open-xchange/lib/oxfunctions.sh

setConfigFilePermissions() {
    ox_update_permissions /opt/open-xchange/etc/eas-provisioning-sms.properties root:open-xchange 640
}

case "$1" in
    configure)
        setConfigFilePermissions
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

dpkg-maintscript-helper mv_conffile /opt/open-xchange/etc/groupware/mobile_configuration_action_sms.properties \
    /opt/open-xchange/etc/eas-provisioning-sms.properties 6.20.99 open-xchange-mobile-configuration-json-action-sms -- $1 \
    $(dpkg-query -W -f='${Config-Version}' open-xchange-mobile-configuration-json-action-sms)

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
